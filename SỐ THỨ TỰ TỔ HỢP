#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        int n, k, x, p = 0;
        cin >> n >> k;
        string a = "", b = "";
        a += ' ';
        b += ' ';
        for (int i = 1; i <= k; i++)
        {
            cin >> x;
            a += to_string(i);
            b += to_string(x);
        }
        while (++p)
        {
            if (a == b)
            {
                cout << p << endl;
                break;
            }
            for (int i = k; i >= 1; i--)
            {
                if (a[i] - '0' != n - k + i)
                {
                    a[i]++;
                    for (int j = i + 1; j <= k; j++)
                        a[j] = a[j - 1] + 1;
                    break;
                }
            }
        }
    }
}
